# https://kubernetes.io/docs/concepts/services-networking/ingress/
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: application-ingress
spec:
  ingressClassName: nginx
  rules:
  - host: frontend.dofreshmind.com
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name:  frontend-service
            port:
              number: 80
      - path: /dashboard
        pathType: Prefix
        dashboard:
          service:
            name: prometheus-operator-grafana
            port: 
              number: 80
      - path: /argocd
        pathType: Prefix
        dashboard:
          service:
            name: argocd-server
            port: 
              number: 80
---
